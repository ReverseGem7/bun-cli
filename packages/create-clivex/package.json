{
	"name": "create-clivex",
	"description": "CLI tool to scaffold Clivex projects quickly and type-safely",
	"version": "0.0.2",
	"bin": {
		"create-clivex": "./dist/index.js"
	},
	"files": [
		"dist",
		"templates"
	],
	"scripts": {
		"build": "bun build --minify --target=node --outdir=dist ./src/index.ts ",
		"check:types": "tsc --noEmit",
		"release": "bun publish"
	},
	"type": "module",
	"keywords": [
		"cli",
		"clivex",
		"scaffold",
		"typescript",
		"typescript-cli",
		"generator"
	],
	"author": "ReverseGem7",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ReverseGem7/clivex.git",
		"directory": "packages/create-clivex"
	},
	"bugs": {
		"url": "https://github.com/ReverseGem7/clivex/issues"
	},
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"clivex": "workspace:*",
		"zod": "^4.0.17"
	}
}
